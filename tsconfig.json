{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.Iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"]
    },
    "allowJs": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
